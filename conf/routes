# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Register page
GET     /register                   controllers.HomeController.register()
POST    /register                   controllers.HomeController.handleRegister()

# Login page
GET     /login                      controllers.HomeController.login()
POST    /login                      controllers.HomeController.handleLogin()

# Forgot Password page
GET     /forgot-password            controllers.HomeController.forgotPassword()
POST    /forgot-password            controllers.HomeController.handleForgotPassword()